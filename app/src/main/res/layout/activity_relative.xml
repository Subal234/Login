<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RelativeActivity"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/ivSatellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:background="@drawable/ic"
            />


        <TextView
            android:id="@+id/tvSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSatellite"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="-53dp"

            android:text="@drawable/ic"
            android:textColor="@color/black"

            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ivRocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-7dp"
            android:layout_toRightOf="@+id/tvSpace"
            android:background="@drawable/ic" />

        <TextView
            android:id="@+id/tvFlights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivRocket"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="92dp"


            android:layout_toRightOf="@+id/tvSpace"
            android:text="@string/flights"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/ivMoonrover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-123dp"
            android:layout_toRightOf="@+id/ivRocket"
            android:background="@drawable/ic"

            />

        <TextView
            android:id="@+id/tvRover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivMoonrover"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tvFlights"
            android:text="@string/rovers"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvDca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSpace"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="43dp"
            android:background="@color/purple_200"
            android:paddingLeft="40dp"
            android:paddingTop="50dp"
            android:paddingRight="60dp"
            android:paddingBottom="60dp"
            android:text="DCA"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/ivArrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="294dp"
            android:layout_marginRight="-20dp"
            android:layout_toRightOf="@+id/tvDca"
            android:padding="5dp"
            android:src="@drawable/ic"

            />

        <Switch
            android:id="@+id/sthOneway"
            android:layout_width="173dp"
            android:layout_height="38dp"
            android:layout_below="@+id/tvDca"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="124dp"
            android:layout_marginRight="220dp"
            android:background="@color/teal_200"
            android:text="@string/oneway"
            android:textSize="20sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/tvTravel"
            android:layout_width="111dp"
            android:layout_height="37dp"
            android:layout_below="@+id/sthOneway"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="61dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:text="@string/traveller"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>
</layout>
